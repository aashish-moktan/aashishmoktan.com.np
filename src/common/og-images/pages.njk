---
# offests
offsetX: 120
offsetY_title: 210
offsetY_excerpt: 290
offsetY_footer: 560

# Font
fontDisplay: "'Outfit', Ubuntu, sans-serif"
fontBody: "'Atkinson Hyperlegible', Ubuntu, sans-serif"
fontTrackingTight: -3
fontTrackingNormal: -0.5
fontBold: 700
fontRegular: 400
leadingFlat: 1
leadingFine: 1.2
leadingRegular: 1.5
fontSizeBig: 90
fontSizeNormal: 30
fontSizeSmall: 20

titleCharsPerLine: 24
excerptCharsPerLine: 50
footerCharsPerLine: 50

# Colors
background: '#f8f8f8'
text: '#2e2e2e'

# Hard coded strings
metaString: 'â€” lenesaile.com'

pagination:
  data: collections.pages
  size: 1
  alias: ogPage
permalink: '/assets/og-images/page-{{ ogPage.data.lang }}-{{ ogPage.fileSlug }}-preview.svg'
layout: null
eleventyExcludeFromCollections: true
---

<svg
  width="1200"
  height="630"
  viewBox="0 0 1200 630"
  version="1.1"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
>

  <!-- colors -->
  {% set themeParts = ogPage.data.theme | replace('-', ' ') | split(' ') %}
  {% if themeParts.length == 2 %}
    {% set theme = themeParts[0] | capitalize ~ ' ' ~ themeParts[1] | capitalize %}
  {% else %}
    {% set theme = themeParts[0] | capitalize %}
  {% endif %}

  {% set themeBg = "" %}
  {% for color in designTokens.colors.items %}
    {% if color.name == theme %}
      {% set themeBg = color.value %}
    {% endif %}
  {% endfor %}

  {% set backgroundColor = themeBg or background %}

  {% if theme == "Royal Blue" %}
    {% set textColor = background %}
  {% else %}
    {% set textColor = text %}
  {% endif %}

  <rect id="bg" width="100%" height="100%" opacity="1" fill="{{ backgroundColor }}" />

  <!-- title -->
  {% set titleInLines = ogPage.data.title | splitlines( titleCharsPerLine ) %}
  {% set titleLeading = fontSizeBig * leadingFine %}
  <text
    id="text"
    font-family="{{ fontDisplay }}"
    font-size="{{ fontSizeBig }}"
    font-weight="{{ fontBold }}"
    fill="{{ textColor }}"
    letter-spacing="{{ fontTrackingTight}}"
  >
    {% for line in titleInLines %}
      <tspan x="{{ offsetX }}" y="{{ offsetY_title + loop.index0 * titleLeading }}"> {{ line }} </tspan>
    {% endfor %}
  </text>

  <!-- excerpt -->
  {% set excerptInLines = (ogPage.data.lead or ogPage.data.description or translations[page.lang].siteDescription) | splitlines( excerptCharsPerLine ) %}
  {% set excerptLeading = fontSizeNormal * leadingRegular %}
  <text
    id="text"
    font-family="{{ fontBody }}"
    font-size="{{ fontSizeNormal }}"
    font-weight="{{ fontRegular }}"
    fill="{{ textColor }}"
    letter-spacing="{{ fontTrackingNormal }}"
  >
    {% for line in excerptInLines %}
      <tspan x="{{ offsetX }}" y="{{ offsetY_excerpt + loop.index0 * excerptLeading }}"> {{ line }} </tspan>
    {% endfor %}
  </text>

  <!-- footer / meta -->
  {% set footerInLines = metaString | splitlines( footerCharsPerLine ) %}
  {% set footerLeading = fontSizeSmall * leadingFlat %}
  <text
    font-family="{{ fontDisplay }}"
    font-size="{{ fontSizeSmall }}"
    font-weight="{{ fontBold }}"
    fill="{{ textColor }}"
    letter-spacing="{{ fontTrackingNormal }}"
  >
  {% for line in footerInLines %}
    <tspan x="{{ offsetX }}" y="{{ offsetY_footer + loop.index0 * footerLeading }}">{{ line }}</tspan>
    {% endfor %}
  </text>

  <!-- image -->
  {% set imagePath = "./src/assets/images/lene/lene-square.jpg" %}
  {% set base64Image = imagePath | base64Format %}

  <pattern id="image-pattern" x="0" y="0" width="100%" height="100%" patternUnits="objectBoundingBox">
    <image
      x="0"
      y="0"
      width="470"
      height="470"
      href="{{ base64Image }}"
      preserveAspectRatio="xMidYMid slice"
    />
  </pattern>
  <circle cx="5%" cy="40%" r="25%" fill="url(#image-pattern)" transform="translate(980,220)" />

